@model RestaurantUI.Models.ReceiptDetailsViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Receipt</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for=@Model.OrderID class="control-label">Order</label>
                <select asp-for=@Model.OrderID class="form-control">
                    @{ foreach (var order in Model.Orders)
                        {
                            <option value=@order.ID>@order.TableNumber || @order.Status || @order.CreatedDateTime</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
