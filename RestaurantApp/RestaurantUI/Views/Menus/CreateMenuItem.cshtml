@model RestaurantUI.Models.MenuDetailsViewModel

@{
    ViewData["Title"] = "CreateMenuItem";
}

<h1>Create New Food Item</h1>

<h4>Food Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateMenuItem">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for=Menu.ID />
            <input type="hidden" asp-for=Category.ID />
            <div class="form-group">
                <label asp-for=MenuItem.Name class="control-label"></label>
                <input asp-for=MenuItem.Name class="form-control" />
                <span asp-validation-for=MenuItem.Name class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for=MenuItem.Description class="control-label"></label>
                <input asp-for=MenuItem.Description class="form-control" />
                <span asp-validation-for=MenuItem.Description class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for=MenuItem.Price class="control-label"></label>
                <input asp-for=MenuItem.Price class="form-control" />
                <span asp-validation-for=MenuItem.Price class="text-danger"></span>
            </div>
            <p class="alert-warning">@ViewBag.ErrorMessage</p>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
