@model RestaurantUI.Models.OrderDetailsViewModel

@{
    ViewData["Title"] = "CreateOrderItemStep1";
}

<h1>Create Order Item</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateOrderItemStep2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for=Order.ID />
            <input type="hidden" asp-for=MenuID />
            <div class="form-group">
                <label asp-for=OrderItem.MenuItemID class="control-label">Menu Item</label>
                <select asp-for=OrderItem.MenuItemID class ="form-control" asp-items=@Model.SelectMenuItems></select>
            </div>
            <div class="form-group">
                <label asp-for=OrderItem.Quantity class="control-label"></label>
                <input asp-for=OrderItem.Quantity class="form-control" />
                <span asp-validation-for=OrderItem.Quantity class="text-danger"></span>
            </div>
            <p class="alert-warning">@ViewBag.ErrorMessage</p>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
