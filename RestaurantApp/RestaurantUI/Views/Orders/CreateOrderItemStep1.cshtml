@model RestaurantUI.Models.OrderDetailsViewModel

@{
    ViewData["Title"] = "CreateOrderItemStep1";
}

<h1>Create Order Item</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateOrderItemStep1">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for=Order.ID />
            <div class="form-group">
                <label asp-for="MenuID" class="control-label">Menu</label>
                <select asp-for=MenuID class="form-control" asp-items=@Model.SelectMenu></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Next" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
